# Example MCP YAML Configuration
# Copy this file to mcp.yaml in your workspace root and customize it

version: "1.0"

servers:
  # Example Node.js MCP server
  - name: node-mcp-server
    command: node
    args:
      - server.js
    env:
      NODE_ENV: development
      PORT: 3000
    cwd: ./mcp-servers/node-server

  # Example Python MCP server
  - name: python-mcp-server
    command: python
    args:
      - -m
      - mcp_server
    env:
      PYTHONPATH: /usr/local/lib/python3.11/site-packages
    cwd: ./mcp-servers/python-server

  # Example npm script server
  - name: npm-mcp-server
    command: npm
    args:
      - run
      - start:mcp
    env:
      DEBUG: mcp:*
    cwd: ./mcp-servers/npm-server

